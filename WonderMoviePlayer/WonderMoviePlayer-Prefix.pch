#import <Availability.h>

#ifndef __IPHONE_4_0
#warning "This project uses features only available in iOS SDK 4.0 and later."
#endif

#ifdef __OBJC__
    #import <UIKit/UIKit.h>
    #import <Foundation/Foundation.h>
#import "RegexKitLite.h"
#endif

#define X(frame) ((frame).origin.x)
#define Y(frame) ((frame).origin.y)
#define W(frame) ((frame).size.width)
#define H(frame) ((frame).size.height)

#define QQImage(src)         [UIImage imageNamed:src]

#if !defined(QQImage)
#define QQImage(src)        [UIImageEx loadAndCacheImageFromApp:src]
#endif

#define LogFrame(f)     NSLog(@"(%f,%f,%f,%f)", X(f), Y(f), W(f), H(f))
#define LogPoint(p)     NSLog(@"(%f,%f)", p.x, p.y)

#ifdef COMMON_LOG
#define CommonLog_i(fmt,...) NSLog(INFO_NEW_FMT(fmt),##__VA_ARGS__,nil)
#define CommonLog_d(fmt,...) NSLog(DEBUG_NEW_FMT(fmt),##__VA_ARGS__,nil)
#define CommonLog_w(fmt,...) NSLog(WARNING_NEW_FMT(fmt),##__VA_ARGS__,nil)
#define CommonLog_e(fmt,...) NSLog(ERROR_NEW_FMT(fmt),##__VA_ARGS__,nil)
#else
#define CommonLog_i(fmt,...)
#define CommonLog_d(fmt,...)
#define CommonLog_w(fmt,...)
#define CommonLog_e(fmt,...)
#endif




// define features
#define MTT_USE_FEATURE_WONDER_VIDEO_PLAYER     YES
#define MTT_USE_FEATURE_WONDER_MPMOIVE_PLAYER   YES
#define MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER   YES


/** Checking features **/
#if !defined(MTT_USE_FEATURE_WONDER_VIDEO_PLAYER)
#define MTT_USE_FEATURE_WONDER_VIDEO_PLAYER NO
#endif // MTT_USE_FEATURE_WONDER_VIDEO_PLAYER

#if !defined(MTT_USE_FEATURE_WONDER_MPMOIVE_PLAYER)
#define MTT_USE_FEATURE_WONDER_MPMOIVE_PLAYER NO
#endif // MTT_USE_FEATURE_WONDER_MPMOIVE_PLAYER

#if !defined(MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER)
#define MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER NO
#endif // MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER

#if !defined(MTT_USE_FEATURE_WONDER_VIDEO_PLAYER) || (MTT_USE_FEATURE_WONDER_VIDEO_PLAYER != YES && MTT_USE_FEATURE_WONDER_VIDEO_PLAYER != NO)
    #error "You need to decide if you want MTT_USE_FEATURE_WONDER_VIDEO_PLAYER or not"
#elif MTT_USE_FEATURE_WONDER_VIDEO_PLAYER == YES
    #define MTT_FEATURE_WONDER_VIDEO_PLAYER

    #if !defined(MTT_USE_FEATURE_WONDER_MPMOIVE_PLAYER) || (MTT_USE_FEATURE_WONDER_MPMOIVE_PLAYER != YES && MTT_USE_FEATURE_WONDER_MPMOIVE_PLAYER != NO)
        #error "You need to decide if you want MTT_USE_FEATURE_WONDER_MPMOIVE_PLAYER or not"
    #endif

    #if !defined(MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER) || (MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER != YES && MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER != NO)
        #error "You need to decide if you want MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER or not"
    #endif

	#if MTT_USE_FEATURE_WONDER_MPMOVIE_PLAYER == YES && MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER == NO
        #define MTT_FEATURE_WONDER_MPMOVIE_PLAYER
    #elif MTT_USE_FEATURE_WONDER_MPMOVIE_PLAYER == NO && MTT_USE_FEATURE_WONDER_AVMOVIE_PLAYER == YES
        #define MTT_FEATURE_WONDER_AVMOVIE_PLAYER
    #else
        #error "Only one of MTT_USE_FEATURE_WONDER_MPMOVIE_PLAYER and MTT_USE_FEATURE_WONDER_MPMOVIE_PLAYER can be defined"
    #endif

#endif // MTT_USE_FEATURE_WONDER_VIDEO_PLAYER
